{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Eyes of Azrael - Collection Templates",
  "description": "Comprehensive templates for Items, Places, Theories, and Archetypes collections with complete metadata specifications",
  "version": "2.0",
  "lastUpdated": "2025-12-26",

  "collections": {

    "items": {
      "description": "Sacred items, legendary weapons, divine artifacts, and ritual objects",
      "collectionName": "items",
      "template": {
        "_id": "string - unique identifier (kebab-case)",
        "_version": "2.0",
        "_type": "item",

        "name": "string - primary name",
        "displayName": "string - formatted display name",
        "alternateNames": ["array of alternate names/spellings"],
        "mythology": "string or array - primary mythology/mythologies",

        "description": "string - comprehensive description",
        "subtitle": "string - brief tagline or domain summary",
        "longDescription": "string - extended description with context",

        "itemProperties": {
          "itemType": "weapon | relic | ritual-object | artifact | tool | garment | crown | scroll",
          "material": "string or array - what it's made from",
          "powers": ["array of magical/divine powers"],
          "owner": "string or array - who owns/wields it",
          "creator": "string - who created/forged it",
          "location": "string - current or mythical location",
          "significance": "string - religious/mythological importance",
          "appearance": "string - physical description",
          "weight": "string - if relevant",
          "dimensions": "string - if relevant",
          "origin": "string - creation story",
          "fate": "string - ultimate fate/destiny",
          "restrictions": "string - who can/cannot use it"
        },

        "relationships": {
          "mythology": "string - primary mythology",
          "relatedDeities": ["array of deity IDs who use/own/created it"],
          "relatedHeroes": ["array of hero IDs associated"],
          "relatedPlaces": ["array of place IDs where it exists"],
          "relatedItems": ["array of related item IDs"],
          "relatedEvents": ["array of event IDs"],
          "relatedTexts": ["array of text IDs that mention it"],
          "relatedArchetypes": ["array of archetype IDs"]
        },

        "displayOptions": {
          "icon": "string - emoji icon",
          "color": "string - hex color code",
          "badge": "string - badge text",
          "primaryImage": "string - URL or path",
          "gallery": ["array of image URLs"],
          "visibility": "public | private | draft",
          "featured": "boolean",
          "showOnIndex": "boolean",
          "customCss": "string - optional custom styling"
        },

        "searchTerms": ["array of searchable terms"],
        "tags": ["array of tags"],
        "facets": {
          "type": "string - itemType",
          "mythology": "string - primary mythology",
          "powerLevel": "mundane | minor | significant | major | legendary | cosmic",
          "material": "string",
          "ownerType": "deity | hero | mortal | communal | lost",
          "status": "active | lost | destroyed | hidden | dormant"
        },

        "sources": {
          "primaryTexts": ["array of source text references"],
          "scholarlyWorks": ["array of academic citations"],
          "urls": ["array of reference URLs"]
        },

        "metadata": {
          "importance": "number 0-100 - relative importance",
          "popularity": "number 0-100 - search/view frequency",
          "completeness": "number 0-100 - data completeness score",
          "verified": "boolean - fact-checked",
          "lastReviewed": "ISO 8601 timestamp"
        },

        "userContent": {
          "createdBy": "string - user ID if user-submitted",
          "contributedBy": ["array of contributor IDs"],
          "moderationStatus": "approved | pending | rejected",
          "moderationNotes": "string"
        },

        "timestamps": {
          "createdAt": "ISO 8601 timestamp",
          "lastUpdated": "ISO 8601 timestamp",
          "publishedAt": "ISO 8601 timestamp"
        }
      },

      "examples": [
        {
          "_id": "mjolnir",
          "name": "Mj√∂lnir",
          "mythology": "norse",
          "itemProperties": {
            "itemType": "weapon",
            "material": "uru metal",
            "powers": ["Returns to wielder", "Controls lightning", "Destroys giants", "Consecrates"],
            "owner": "Thor",
            "creator": "Brokkr and Sindri (dwarves)",
            "location": "Asgard"
          },
          "facets": {
            "powerLevel": "legendary",
            "ownerType": "deity"
          }
        }
      ]
    },

    "places": {
      "description": "Sacred locations, mythical realms, temples, and geographic sites",
      "collectionName": "places",
      "template": {
        "_id": "string - unique identifier (kebab-case)",
        "_version": "2.0",
        "_type": "place",

        "name": "string - primary name",
        "displayName": "string - formatted display name",
        "alternateNames": ["array of alternate names"],
        "mythology": "string or array - associated mythology/mythologies",

        "description": "string - comprehensive description",
        "subtitle": "string - brief descriptor",
        "longDescription": "string - extended description",

        "placeProperties": {
          "placeType": "sacred-mountain | temple | underworld | paradise | grove | city | realm | island | river | palace | gate | axis-mundi",
          "location": "string - geographic or cosmic location",
          "coordinates": {
            "lat": "number - if real location",
            "lng": "number - if real location"
          },
          "inhabitants": ["array of deity/entity IDs who dwell there"],
          "significance": "string - religious/mythological importance",
          "access": "open | restricted | pilgrimage | mythical-only | forbidden",
          "geography": "string - physical/mythical terrain description",
          "climate": "string - if relevant",
          "architecture": "string - built structures",
          "defenses": "string - protections/guardians",
          "realm": "physical | spiritual | underworld | celestial | liminal",
          "realityStatus": "historical | mythical | legendary | symbolic"
        },

        "relationships": {
          "mythology": "string - primary mythology",
          "relatedDeities": ["array of deity IDs associated"],
          "relatedHeroes": ["array of hero IDs who journeyed there"],
          "relatedEvents": ["array of event IDs that occurred there"],
          "relatedPlaces": ["array of connected place IDs"],
          "relatedItems": ["array of items found/stored there"],
          "relatedTexts": ["array of texts describing it"],
          "relatedArchetypes": ["array of archetype IDs"]
        },

        "displayOptions": {
          "icon": "string - emoji icon",
          "color": "string - hex color",
          "badge": "string - badge text",
          "primaryImage": "string - URL or path",
          "gallery": ["array of image URLs"],
          "mapView": "boolean - show on map",
          "visibility": "public | private | draft",
          "featured": "boolean",
          "showOnIndex": "boolean"
        },

        "searchTerms": ["array of searchable terms"],
        "tags": ["array of tags"],
        "facets": {
          "type": "string - placeType",
          "mythology": "string",
          "accessibility": "real | mythical | both",
          "realm": "string - which realm",
          "importance": "minor | regional | major | cosmic",
          "status": "active | ruins | legendary | symbolic"
        },

        "sources": {
          "primaryTexts": ["array of source references"],
          "scholarlyWorks": ["array of academic citations"],
          "urls": ["array of reference URLs"]
        },

        "metadata": {
          "importance": "number 0-100",
          "popularity": "number 0-100",
          "completeness": "number 0-100",
          "verified": "boolean",
          "lastReviewed": "ISO 8601 timestamp"
        },

        "userContent": {
          "createdBy": "string - user ID",
          "contributedBy": ["array of contributor IDs"],
          "moderationStatus": "approved | pending | rejected",
          "moderationNotes": "string"
        },

        "timestamps": {
          "createdAt": "ISO 8601 timestamp",
          "lastUpdated": "ISO 8601 timestamp",
          "publishedAt": "ISO 8601 timestamp"
        }
      },

      "examples": [
        {
          "_id": "mount-olympus",
          "name": "Mount Olympus",
          "mythology": "greek",
          "placeProperties": {
            "placeType": "sacred-mountain",
            "location": "Greece",
            "coordinates": {
              "lat": 40.0853,
              "lng": 22.3583
            },
            "inhabitants": ["zeus", "hera", "poseidon", "athena", "apollo", "artemis"],
            "realm": "celestial",
            "realityStatus": "historical"
          },
          "facets": {
            "accessibility": "both",
            "importance": "cosmic"
          }
        }
      ]
    },

    "theories": {
      "description": "Comparative mythology theories, academic hypotheses, and scholarly interpretations",
      "collectionName": "theories",
      "template": {
        "_id": "string - unique identifier (kebab-case)",
        "_version": "2.0",
        "_type": "theory",

        "title": "string - theory name",
        "displayTitle": "string - formatted display title",
        "alternateNames": ["array of alternate names for theory"],
        "category": "comparative-mythology | archetype-theory | historical-theory | psychological-theory | linguistic-theory | archaeological-theory | astronomical-theory",

        "description": "string - comprehensive description",
        "summary": "string - brief summary",
        "fullDescription": "string - extended explanation",

        "theoryProperties": {
          "hypothesis": "string - main claim/thesis",
          "evidence": ["array of evidence points"],
          "methodology": "string - research approach",
          "scholars": ["array of scholar names"],
          "firstProposed": "string - year or scholar who first proposed",
          "relatedTheories": ["array of related theory IDs"],
          "status": "widely-accepted | mainstream | debated | controversial | fringe | historical | disproven",
          "counterArguments": ["array of counterpoints"],
          "supportingData": {
            "textualEvidence": ["array of text references"],
            "linguisticEvidence": ["array of linguistic parallels"],
            "archaeologicalEvidence": ["array of archaeological findings"],
            "comparativeEvidence": ["array of cross-cultural patterns"]
          },
          "implications": "string - what this theory means",
          "applications": "string - how it's used in analysis"
        },

        "relationships": {
          "mythologies": ["array of mythology IDs involved"],
          "relatedDeities": ["array of deity IDs that exemplify theory"],
          "relatedHeroes": ["array of hero IDs"],
          "relatedPlaces": ["array of place IDs"],
          "relatedItems": ["array of item IDs"],
          "relatedArchetypes": ["array of archetype IDs"],
          "relatedTexts": ["array of source text IDs"],
          "comparedEntities": [
            {
              "mythology": "string",
              "entityId": "string",
              "entityType": "deity | hero | place | event",
              "role": "string - role in theory"
            }
          ]
        },

        "citations": {
          "primarySources": ["array of primary source citations"],
          "scholarlyWorks": [
            {
              "author": "string",
              "title": "string",
              "year": "number",
              "publisher": "string",
              "pages": "string",
              "url": "string"
            }
          ],
          "references": ["array of reference URLs"]
        },

        "displayOptions": {
          "icon": "string - emoji",
          "color": "string - hex color",
          "badge": "THEORY",
          "comparisonTable": "boolean - show comparison table",
          "diagram": "string - URL to theory diagram",
          "visibility": "public | academic | draft",
          "featured": "boolean"
        },

        "searchTerms": ["array of searchable terms"],
        "tags": ["array of tags"],
        "facets": {
          "category": "string - category",
          "status": "string - acceptance status",
          "mythologyCount": "number - how many mythologies involved",
          "evidenceStrength": "weak | moderate | strong | compelling",
          "timeframe": "ancient | classical | medieval | modern | contemporary"
        },

        "metadata": {
          "importance": "number 0-100",
          "citationCount": "number - how often cited",
          "academicAcceptance": "number 0-100",
          "completeness": "number 0-100",
          "verified": "boolean",
          "peerReviewed": "boolean",
          "lastReviewed": "ISO 8601 timestamp"
        },

        "userContent": {
          "createdBy": "string - user ID",
          "contributedBy": ["array of contributor IDs"],
          "moderationStatus": "approved | pending | rejected | academic-review",
          "moderationNotes": "string"
        },

        "timestamps": {
          "createdAt": "ISO 8601 timestamp",
          "lastUpdated": "ISO 8601 timestamp",
          "publishedAt": "ISO 8601 timestamp"
        }
      },

      "examples": [
        {
          "_id": "indo-european-sky-father",
          "title": "Indo-European Sky Father",
          "category": "comparative-mythology",
          "theoryProperties": {
            "hypothesis": "Zeus, Jupiter, Dyaus Pita, and Odin derive from a common Proto-Indo-European sky god",
            "evidence": [
              "Linguistic similarities in god names (Dyeus, Zeus, Jupiter)",
              "Common attributes: sky, thunder, kingship",
              "Similar mythological roles across cultures"
            ],
            "status": "widely-accepted"
          },
          "facets": {
            "mythologyCount": 4,
            "evidenceStrength": "compelling"
          }
        }
      ]
    },

    "archetypes": {
      "description": "Universal patterns and archetypal structures across mythologies",
      "collectionName": "archetypes",
      "template": {
        "_id": "string - unique identifier (kebab-case)",
        "_version": "2.0",
        "_type": "archetype",

        "name": "string - archetype name",
        "displayName": "string - formatted display name",
        "alternateNames": ["array of alternate names"],
        "archetypeCategory": "deity | elemental | story | journey | place | prophecy | hero | creature | event | symbol",

        "description": "string - comprehensive description of pattern",
        "summary": "string - brief summary",
        "fullDescription": "string - extended explanation",

        "archetypeProperties": {
          "characteristics": ["array of defining traits/features"],
          "universalElements": ["array of cross-cultural constants"],
          "variations": ["array of cultural variations"],
          "psychologicalMeaning": "string - Jungian or symbolic interpretation",
          "socialFunction": "string - role in society/culture",
          "evolutionaryOrigin": "string - potential evolutionary basis",
          "symbolism": "string - symbolic meaning",
          "opposingArchetype": "string - archetype ID of opposite",
          "relatedPatterns": ["array of related pattern descriptions"],
          "manifestations": {
            "inMyth": "string - how it appears in mythology",
            "inRitual": "string - how it appears in ritual",
            "inArt": "string - artistic representations",
            "inModernCulture": "string - modern manifestations"
          }
        },

        "examples": [
          {
            "mythology": "string - mythology ID",
            "entityId": "string - specific deity/hero/place ID",
            "entityName": "string - entity name",
            "entityType": "deity | hero | place | event | item",
            "manifestation": "string - how archetype manifests in this example",
            "notes": "string - specific notes about this example",
            "strength": "weak | moderate | strong | exemplary"
          }
        ],

        "relationships": {
          "relatedArchetypes": ["array of related archetype IDs"],
          "opposingArchetypes": ["array of opposing archetype IDs"],
          "parentArchetypes": ["array of broader archetype IDs"],
          "childArchetypes": ["array of more specific archetype IDs"],
          "exampleDeities": ["array of deity IDs"],
          "exampleHeroes": ["array of hero IDs"],
          "examplePlaces": ["array of place IDs"],
          "exampleEvents": ["array of event IDs"],
          "relatedTheories": ["array of theory IDs"],
          "mythologies": ["array of mythology IDs where archetype appears"]
        },

        "comparisonData": {
          "comparisonTable": [
            {
              "mythology": "string",
              "example": "string - entity name",
              "attributes": ["array of key attributes"],
              "uniqueFeatures": ["array of unique features"],
              "similarities": ["array of similarities to other examples"]
            }
          ]
        },

        "displayOptions": {
          "icon": "string - emoji",
          "color": "string - hex color for category",
          "badge": "ARCHETYPE",
          "comparisonView": "boolean - show comparison table",
          "diagramUrl": "string - URL to archetype diagram",
          "visibility": "public | academic | draft",
          "featured": "boolean",
          "showOnIndex": "boolean"
        },

        "searchTerms": ["array of searchable terms"],
        "tags": ["array of tags"],
        "facets": {
          "category": "string - archetypeCategory",
          "mythologyCount": "number - how many mythologies",
          "exampleCount": "number - how many examples",
          "universality": "rare | common | widespread | universal",
          "timeframe": "ancient | classical | ongoing"
        },

        "sources": {
          "academicSources": [
            {
              "author": "string",
              "title": "string",
              "year": "number",
              "relevance": "string"
            }
          ],
          "textualSources": ["array of primary text references"],
          "urls": ["array of reference URLs"]
        },

        "metadata": {
          "importance": "number 0-100",
          "academicRecognition": "number 0-100",
          "completeness": "number 0-100",
          "verified": "boolean",
          "lastReviewed": "ISO 8601 timestamp"
        },

        "userContent": {
          "createdBy": "string - user ID",
          "contributedBy": ["array of contributor IDs"],
          "moderationStatus": "approved | pending | rejected",
          "moderationNotes": "string"
        },

        "timestamps": {
          "createdAt": "ISO 8601 timestamp",
          "lastUpdated": "ISO 8601 timestamp",
          "publishedAt": "ISO 8601 timestamp"
        }
      },

      "examples": [
        {
          "_id": "sky-father",
          "name": "Sky Father",
          "archetypeCategory": "deity",
          "archetypeProperties": {
            "characteristics": [
              "Rules from sky/heavens",
              "Controls weather and storms",
