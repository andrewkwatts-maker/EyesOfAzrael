{
  "name": "eyes-of-azrael",
  "version": "1.0.0",
  "description": "Comprehensive world mythology explorer with entity system and dynamic content loading",
  "scripts": {
    "generate-indices": "node scripts/generate-entity-indices.js",
    "test-indices": "node scripts/generate-entity-indices.js && echo 'Indices generated successfully'",
    "watch-entities": "nodemon --watch data/entities --ext json --exec 'node scripts/generate-entity-indices.js'",
    "migrate": "node scripts/migrate-to-firebase-assets.js --all",
    "migrate:dry-run": "node scripts/migrate-to-firebase-assets.js --all --dry-run",
    "migrate:test": "node scripts/migrate-to-firebase-assets.js --page mythos/greek/deities/zeus.html --dry-run",
    "migrate:verify": "node scripts/verify-migration-setup.js",
    "add-submission-cards": "node scripts/add-submission-cards-to-grids.js",
    "add-submission-cards:dry-run": "node scripts/add-submission-cards-to-grids.js --dry-run",
    "add-submission-cards:verbose": "node scripts/add-submission-cards-to-grids.js --verbose",
    "detect-migrations": "node scripts/detect-html-migrations.js --skip-firebase",
    "detect-migrations:firebase": "node scripts/detect-html-migrations.js --check-firebase",
    "detect-migrations:verbose": "node scripts/detect-html-migrations.js --skip-firebase --verbose",
    "validate-firebase": "node scripts/validate-all-firebase-assets.js",
    "enhance-firebase": "node scripts/auto-enhance-firebase-assets.js",
    "enhance-firebase:dry-run": "node scripts/auto-enhance-firebase-assets.js --dry-run",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "validate-icons": "node scripts/validate-pwa-icons.js",
    "build": "bash build.sh || cmd /c build.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:bash": "bash test.sh || cmd /c test.sh",
    "deploy": "bash deploy.sh || cmd /c deploy.sh",
    "deploy:staging": "bash deploy.sh staging || cmd /c deploy.sh staging",
    "rollback": "bash rollback.sh || cmd /c rollback.sh",
    "smoke-test": "bash smoke-test.sh || cmd /c smoke-test.sh",
    "serve": "firebase serve",
    "emulators": "firebase emulators:start"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/EyesOfAzrael.git"
  },
  "keywords": [
    "mythology",
    "kabbalah",
    "entities",
    "archetypes",
    "spiritual",
    "ancient-wisdom"
  ],
  "author": "EyesOfAzrael Development Team",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "glob": "^10.3.10",
    "jsdom": "^27.3.0"
  }
}
