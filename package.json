{
  "name": "eyes-of-azrael",
  "version": "1.0.0",
  "description": "Comprehensive world mythology explorer with entity system and dynamic content loading",
  "scripts": {
    "generate-indices": "node scripts/generate-entity-indices.js",
    "test-indices": "node scripts/generate-entity-indices.js && echo 'Indices generated successfully'",
    "watch-entities": "nodemon --watch data/entities --ext json --exec 'node scripts/generate-entity-indices.js'",
    "migrate": "node scripts/migrate-to-firebase-assets.js --all",
    "migrate:dry-run": "node scripts/migrate-to-firebase-assets.js --all --dry-run",
    "migrate:test": "node scripts/migrate-to-firebase-assets.js --page mythos/greek/deities/zeus.html --dry-run",
    "migrate:verify": "node scripts/verify-migration-setup.js",
    "add-submission-cards": "node scripts/add-submission-cards-to-grids.js",
    "add-submission-cards:dry-run": "node scripts/add-submission-cards-to-grids.js --dry-run",
    "add-submission-cards:verbose": "node scripts/add-submission-cards-to-grids.js --verbose",
    "detect-migrations": "node scripts/detect-html-migrations.js --skip-firebase",
    "detect-migrations:firebase": "node scripts/detect-html-migrations.js --check-firebase",
    "detect-migrations:verbose": "node scripts/detect-html-migrations.js --skip-firebase --verbose",
    "validate-firebase": "node scripts/validate-all-firebase-assets.js",
    "enhance-firebase": "node scripts/auto-enhance-firebase-assets.js",
    "enhance-firebase:dry-run": "node scripts/auto-enhance-firebase-assets.js --dry-run",
    "generate-icons": "node scripts/generate-pwa-icons.js",
    "validate-icons": "node scripts/validate-pwa-icons.js",
    "optimize-images": "node scripts/optimize-images.js",
    "optimize-images:dry-run": "node scripts/optimize-images.js --dry-run",
    "optimize-images:verbose": "node scripts/optimize-images.js --verbose",
    "build": "bash build.sh || cmd /c build.sh",
    "prebuild": "npm run optimize-images",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:unit": "jest __tests__/components",
    "test:integration": "jest __tests__/integration",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:update": "jest --updateSnapshot",
    "test:verbose": "jest --verbose",
    "test:silent": "jest --silent",
    "test:bail": "jest --bail",
    "test:changed": "jest --onlyChanged",
    "test:related": "jest --findRelatedTests",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:e2e:mobile": "playwright test --project='Mobile Chrome'",
    "test:e2e:update-snapshots": "playwright test --update-snapshots",
    "coverage:report": "node scripts/generate-coverage-report.js",
    "coverage:open": "start coverage/lcov-report/index.html || open coverage/lcov-report/index.html || xdg-open coverage/lcov-report/index.html",
    "coverage:summary": "jest --coverage --coverageReporters=text-summary",
    "metrics:dashboard": "start __tests__/metrics-dashboard.html || open __tests__/metrics-dashboard.html || xdg-open __tests__/metrics-dashboard.html",
    "test:performance": "jest __tests__/performance --verbose",
    "test:performance:watch": "jest __tests__/performance --watch",
    "test:performance:benchmarks": "jest __tests__/performance/performance-benchmarks.test.js",
    "test:performance:memory": "jest __tests__/performance/memory-leak.test.js",
    "test:performance:bundle": "jest __tests__/performance/bundle-size.test.js",
    "test:bash": "bash test.sh || cmd /c test.sh",
    "deploy": "bash deploy.sh || cmd /c deploy.sh",
    "deploy:staging": "bash deploy.sh staging || cmd /c deploy.sh staging",
    "rollback": "bash rollback.sh || cmd /c rollback.sh",
    "smoke-test": "bash smoke-test.sh || cmd /c smoke-test.sh",
    "serve": "firebase serve",
    "emulators": "firebase emulators:start",
    "test:security": "jest __tests__/security --verbose",
    "build:prod": "node scripts/build-production.js",
    "build:analyze": "npm run build:prod && node scripts/analyze-bundle.js",
    "serve:prod": "npx http-server dist -p 8080",
    "minify": "node scripts/minify-bundle.js",
    "gzip-check": "node scripts/gzip-check.js",
    "optimize": "npm run minify && npm run gzip-check",
    "bundle:analyze": "npm run minify && npm run gzip-check",
    "lint": "eslint js/ scripts/ --ext .js || echo 'ESLint not configured'",
    "lint:fix": "eslint js/ scripts/ --ext .js --fix || echo 'ESLint not configured'",
    "format": "prettier --write \"**/*.{js,json,css,html}\" || echo 'Prettier not configured'",
    "format:check": "prettier --check \"**/*.{js,json,css,html}\" || echo 'Prettier not configured'",
    "validate:entities": "node scripts/validate-entities.js firebase-assets-enhanced",
    "validate:entities:report": "node scripts/validate-entities.js firebase-assets-enhanced --report",
    "validate:templates": "node scripts/validate-templates.js mythos",
    "validate:templates:report": "node scripts/validate-templates.js mythos --report",
    "validate:all": "npm run validate:entities && npm run validate:templates",
    "validate:all:report": "npm run validate:entities:report && npm run validate:templates:report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/EyesOfAzrael.git"
  },
  "keywords": [
    "mythology",
    "kabbalah",
    "entities",
    "archetypes",
    "spiritual",
    "ancient-wisdom"
  ],
  "author": "EyesOfAzrael Development Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.9.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^2.1.1",
    "axe-core": "^4.11.0",
    "axe-playwright": "^2.2.2",
    "clean-css-cli": "^5.6.3",
    "glob": "^13.0.0",
    "html-minifier": "^4.0.0",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.11",
    "sharp": "^0.34.5",
    "terser": "^5.44.1"
  },
  "dependencies": {
    "@sentry/browser": "^10.32.1",
    "@sentry/tracing": "^7.120.4",
    "cheerio": "^1.0.0-rc.12",
    "cli-progress": "^3.12.0",
    "firebase": "^10.7.1",
    "firebase-admin": "^12.0.0",
    "jsdom": "^27.3.0"
  }
}
