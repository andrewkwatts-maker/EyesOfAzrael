{
  "version": "1.0.0",
  "lastUpdated": "2025-12-27",
  "description": "Performance benchmarks and targets for Eyes of Azrael mythology site",

  "thresholds": {
    "pageLoad": {
      "target": 3000,
      "warning": 2000,
      "optimal": 1500,
      "unit": "ms",
      "description": "Total page load time from navigation start to load complete"
    },
    "firstContentfulPaint": {
      "target": 2000,
      "warning": 1500,
      "optimal": 1000,
      "unit": "ms",
      "description": "Time until first content is painted to screen"
    },
    "timeToInteractive": {
      "target": 5000,
      "warning": 3500,
      "optimal": 2500,
      "unit": "ms",
      "description": "Time until page is fully interactive"
    },
    "firebaseQuery": {
      "target": 1000,
      "warning": 500,
      "optimal": 200,
      "unit": "ms",
      "description": "Maximum time for a single Firebase query"
    },
    "authTime": {
      "target": 2000,
      "warning": 1500,
      "optimal": 1000,
      "unit": "ms",
      "description": "Time for user authentication to complete"
    },
    "scriptLoad": {
      "target": 1500,
      "warning": 1000,
      "optimal": 500,
      "unit": "ms",
      "description": "Time to load and parse individual scripts"
    },
    "shaderInit": {
      "target": 800,
      "warning": 500,
      "optimal": 300,
      "unit": "ms",
      "description": "Time to initialize WebGL shaders"
    }
  },

  "resourceBudgets": {
    "totalPageSize": {
      "target": 3000000,
      "warning": 2000000,
      "optimal": 1500000,
      "unit": "bytes",
      "description": "Total size of all resources loaded"
    },
    "jsBundle": {
      "target": 500000,
      "warning": 300000,
      "optimal": 200000,
      "unit": "bytes",
      "description": "Total JavaScript bundle size"
    },
    "cssBundle": {
      "target": 100000,
      "warning": 75000,
      "optimal": 50000,
      "unit": "bytes",
      "description": "Total CSS bundle size"
    },
    "images": {
      "target": 1000000,
      "warning": 750000,
      "optimal": 500000,
      "unit": "bytes",
      "description": "Total image assets size"
    },
    "fonts": {
      "target": 200000,
      "warning": 150000,
      "optimal": 100000,
      "unit": "bytes",
      "description": "Total font files size"
    }
  },

  "baselineMetrics": {
    "description": "Baseline performance metrics captured during initial implementation",
    "capturedAt": "2025-12-27",
    "environment": {
      "browser": "Chrome 120+",
      "connection": "4G",
      "device": "Desktop"
    },
    "metrics": {
      "pageLoad": {
        "homepage": 1200,
        "deityPage": 1800,
        "dashboardPage": 2200,
        "searchPage": 1500
      },
      "firstContentfulPaint": {
        "homepage": 800,
        "deityPage": 1000,
        "dashboardPage": 1200,
        "searchPage": 900
      },
      "timeToInteractive": {
        "homepage": 2000,
        "deityPage": 2500,
        "dashboardPage": 3500,
        "searchPage": 2200
      },
      "firebaseQueryAverage": {
        "deityFetch": 150,
        "collectionQuery": 300,
        "searchQuery": 500,
        "userTheories": 200
      }
    }
  },

  "monitoringRules": {
    "pageLoad": {
      "enabled": true,
      "threshold": 3000,
      "alertLevel": "warning",
      "message": "Page load exceeded 3 seconds"
    },
    "firebaseQuery": {
      "enabled": true,
      "threshold": 1000,
      "alertLevel": "warning",
      "message": "Firebase query exceeded 1 second"
    },
    "authTime": {
      "enabled": true,
      "threshold": 2000,
      "alertLevel": "warning",
      "message": "Authentication took longer than 2 seconds"
    },
    "scriptLoad": {
      "enabled": true,
      "threshold": 1500,
      "alertLevel": "info",
      "message": "Script load time exceeded threshold"
    },
    "resourceCount": {
      "enabled": true,
      "threshold": 100,
      "alertLevel": "info",
      "message": "Total resource count exceeded 100"
    }
  },

  "optimizationTargets": {
    "phase1": {
      "description": "Initial optimization targets",
      "timeline": "Q1 2026",
      "goals": {
        "pageLoad": "< 2.5s for all pages",
        "firstContentfulPaint": "< 1.5s",
        "firebaseQueries": "< 800ms average",
        "totalPageSize": "< 2.5MB"
      }
    },
    "phase2": {
      "description": "Advanced optimization targets",
      "timeline": "Q2 2026",
      "goals": {
        "pageLoad": "< 2s for all pages",
        "firstContentfulPaint": "< 1s",
        "firebaseQueries": "< 500ms average",
        "totalPageSize": "< 2MB"
      }
    },
    "phase3": {
      "description": "Premium performance targets",
      "timeline": "Q3 2026",
      "goals": {
        "pageLoad": "< 1.5s for all pages",
        "firstContentfulPaint": "< 800ms",
        "firebaseQueries": "< 300ms average",
        "totalPageSize": "< 1.5MB"
      }
    }
  },

  "criticalUserFlows": {
    "homepage": {
      "description": "Landing page first visit",
      "maxLoadTime": 2000,
      "criticalResources": [
        "theme-base.css",
        "firebase-init.js",
        "navigation.js"
      ]
    },
    "deityView": {
      "description": "Viewing a deity page",
      "maxLoadTime": 2500,
      "criticalResources": [
        "entity-renderer-firebase.js",
        "mythology-colors.css"
      ]
    },
    "search": {
      "description": "Using search functionality",
      "maxLoadTime": 2000,
      "criticalResources": [
        "search.js",
        "firebase-db.js"
      ]
    },
    "userSubmission": {
      "description": "Submitting user theory",
      "maxLoadTime": 3000,
      "criticalResources": [
        "submission-workflow.js",
        "firebase-crud-manager.js"
      ]
    }
  },

  "performanceScore": {
    "description": "Weighted performance score calculation",
    "weights": {
      "pageLoad": 0.3,
      "firstContentfulPaint": 0.25,
      "timeToInteractive": 0.2,
      "firebaseQueries": 0.15,
      "resourceSize": 0.1
    },
    "grades": {
      "A+": { "min": 95, "description": "Excellent performance" },
      "A": { "min": 90, "description": "Very good performance" },
      "B": { "min": 80, "description": "Good performance" },
      "C": { "min": 70, "description": "Acceptable performance" },
      "D": { "min": 60, "description": "Poor performance" },
      "F": { "min": 0, "description": "Unacceptable performance" }
    }
  },

  "testScenarios": {
    "coldStart": {
      "description": "First visit with empty cache",
      "cacheStrategy": "empty",
      "expectedLoad": 3000
    },
    "warmStart": {
      "description": "Return visit with populated cache",
      "cacheStrategy": "full",
      "expectedLoad": 1500
    },
    "slowNetwork": {
      "description": "3G network simulation",
      "networkProfile": "Regular 3G",
      "expectedLoad": 5000
    },
    "fastNetwork": {
      "description": "Fast 4G/5G network",
      "networkProfile": "4G",
      "expectedLoad": 2000
    }
  },

  "recommendations": {
    "caching": {
      "priority": "high",
      "description": "Implement aggressive caching for static assets",
      "expectedImprovement": "30-40% faster load times on repeat visits"
    },
    "lazyLoading": {
      "priority": "high",
      "description": "Lazy load non-critical images and components",
      "expectedImprovement": "20-30% faster initial render"
    },
    "codeSplitting": {
      "priority": "medium",
      "description": "Split JavaScript bundles by route",
      "expectedImprovement": "15-25% smaller initial bundle"
    },
    "firebaseIndexing": {
      "priority": "high",
      "description": "Create composite indexes for common queries",
      "expectedImprovement": "50-70% faster Firebase queries"
    },
    "imageOptimization": {
      "priority": "medium",
      "description": "Use WebP format and responsive images",
      "expectedImprovement": "40-60% smaller image sizes"
    },
    "preconnect": {
      "priority": "low",
      "description": "Add preconnect hints for Firebase CDN",
      "expectedImprovement": "100-200ms faster Firebase initialization"
    }
  }
}
