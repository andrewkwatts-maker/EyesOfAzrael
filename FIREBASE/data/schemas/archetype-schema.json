{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Archetype Scoring System",
  "description": "Schema for archetype pattern scoring and classification",
  "version": "1.0.0",

  "archetypeCategories": [
    "hero-journey",
    "creation",
    "flood",
    "trickster",
    "dying-god",
    "world-tree",
    "dragon-slayer",
    "divine-child",
    "great-mother",
    "wise-old-man",
    "magical-weapon",
    "sacred-mountain",
    "underworld-journey",
    "divine-marriage",
    "cosmic-battle"
  ],

  "archetypeScoring": {
    "description": "Archetype scores range from 0-100, measuring how strongly an entity embodies a pattern",
    "ranges": {
      "strong": { "min": 75, "max": 100, "description": "Quintessential example of archetype" },
      "moderate": { "min": 50, "max": 74, "description": "Clear archetype pattern present" },
      "weak": { "min": 25, "max": 49, "description": "Some archetype elements" },
      "minimal": { "min": 1, "max": 24, "description": "Tangential archetype connection" },
      "none": { "min": 0, "max": 0, "description": "Not relevant to archetype" }
    }
  },

  "scoringCriteria": {
    "hero-journey": {
      "callToAdventure": { "weight": 15, "description": "Receives quest or call" },
      "refusalOfCall": { "weight": 5, "description": "Initial hesitation" },
      "supernaturalAid": { "weight": 10, "description": "Mentor or magical helper" },
      "crossingThreshold": { "weight": 10, "description": "Enters special world" },
      "trialsAndTests": { "weight": 15, "description": "Faces challenges" },
      "apotheosis": { "weight": 10, "description": "Divine transformation" },
      "ultimateBoon": { "weight": 15, "description": "Achieves goal" },
      "returnWithElixir": { "weight": 10, "description": "Brings benefit home" },
      "deathAndRebirth": { "weight": 10, "description": "Symbolic death/transformation" }
    },

    "trickster": {
      "shapeShifting": { "weight": 15, "description": "Changes form/appearance" },
      "boundaryViolation": { "weight": 20, "description": "Breaks rules/taboos" },
      "deception": { "weight": 20, "description": "Uses cunning and lies" },
      "chaosCreation": { "weight": 15, "description": "Disrupts order" },
      "culturalGifts": { "weight": 10, "description": "Brings knowledge/fire/etc" },
      "dualNature": { "weight": 10, "description": "Both helpful and harmful" },
      "sexualProwess": { "weight": 5, "description": "Sexual adventures" },
      "glutton": { "weight": 5, "description": "Excessive appetite" }
    },

    "magical-weapon": {
      "divineOrigin": { "weight": 20, "description": "Created by gods/magic" },
      "uniquePowers": { "weight": 20, "description": "Special abilities" },
      "chosenWielder": { "weight": 15, "description": "Only certain ones can use" },
      "namedIdentity": { "weight": 10, "description": "Has a name/personality" },
      "questObject": { "weight": 15, "description": "Sought in hero's journey" },
      "worldSaving": { "weight": 10, "description": "Used to save world/people" },
      "symbolism": { "weight": 10, "description": "Represents concept/power" }
    },

    "sacred-mountain": {
      "axisMundi": { "weight": 20, "description": "Center of cosmos/world axis" },
      "divineResidence": { "weight": 20, "description": "Home of gods" },
      "humanInaccessible": { "weight": 10, "description": "Difficult/forbidden to climb" },
      "cosmicLayers": { "weight": 15, "description": "Connects realms" },
      "pilgrimage": { "weight": 10, "description": "Site of pilgrimage" },
      "revelation": { "weight": 15, "description": "Place of divine revelation" },
      "paradisiacal": { "weight": 10, "description": "Beautiful/perfect" }
    },

    "underworld-journey": {
      "livingVisitor": { "weight": 15, "description": "Living person visits underworld" },
      "seekingKnowledge": { "weight": 10, "description": "Seeks wisdom/prophecy" },
      "rescueMission": { "weight": 15, "description": "Attempts to rescue someone" },
      "guardian": { "weight": 10, "description": "Must pass guardian(s)" },
      "tests": { "weight": 10, "description": "Faces challenges/tests" },
      "tabooViolation": { "weight": 10, "description": "Breaks underworld rule" },
      "transformation": { "weight": 15, "description": "Changed by experience" },
      "returnDifficulty": { "weight": 15, "description": "Difficult/impossible return" }
    },

    "great-mother": {
      "nurturer": { "weight": 15, "description": "Provides sustenance/care" },
      "creator": { "weight": 15, "description": "Birth-giver/creator" },
      "protector": { "weight": 10, "description": "Defends children" },
      "destroyer": { "weight": 10, "description": "Destructive aspect" },
      "fertility": { "weight": 15, "description": "Associated with fertility" },
      "earthConnection": { "weight": 15, "description": "Connected to earth/nature" },
      "cyclical": { "weight": 10, "description": "Embodies cycles (seasons, life)" },
      "transformative": { "weight": 10, "description": "Transforms/initiates" }
    },

    "dragon-slayer": {
      "monstrousOpponent": { "weight": 20, "description": "Fights dragon/monster" },
      "maidenRescue": { "weight": 10, "description": "Saves princess/maiden" },
      "communityThreat": { "weight": 15, "description": "Monster threatens community" },
      "magicalAid": { "weight": 10, "description": "Uses magical weapon/help" },
      "cunning": { "weight": 10, "description": "Uses strategy not just force" },
      "transformation": { "weight": 10, "description": "Hero transformed by victory" },
      "treasureGain": { "weight": 10, "description": "Gains treasure/boon" },
      "orderOverChaos": { "weight": 15, "description": "Represents order defeating chaos" }
    }
  },

  "entityArchetypeSchema": {
    "type": "object",
    "properties": {
      "archetypes": {
        "type": "array",
        "description": "List of archetypes this entity embodies",
        "items": {
          "type": "object",
          "required": ["category", "score"],
          "properties": {
            "category": {
              "type": "string",
              "enum": [
                "hero-journey",
                "creation",
                "flood",
                "trickster",
                "dying-god",
                "world-tree",
                "dragon-slayer",
                "divine-child",
                "great-mother",
                "wise-old-man",
                "magical-weapon",
                "sacred-mountain",
                "underworld-journey",
                "divine-marriage",
                "cosmic-battle"
              ]
            },
            "score": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Archetype strength score (0-100)"
            },
            "strength": {
              "type": "string",
              "enum": ["strong", "moderate", "weak", "minimal", "none"],
              "description": "Qualitative assessment"
            },
            "criteria": {
              "type": "object",
              "description": "Specific criteria scores that contributed to total",
              "patternProperties": {
                "^[a-zA-Z]+$": {
                  "type": "number",
                  "minimum": 0,
                  "maximum": 100
                }
              }
            },
            "examples": {
              "type": "array",
              "description": "Specific examples from mythology",
              "items": { "type": "string" }
            },
            "analysis": {
              "type": "string",
              "description": "Narrative explanation of archetype embodiment"
            }
          }
        }
      },
      "primaryArchetype": {
        "type": "string",
        "description": "The strongest archetype for this entity"
      },
      "archetypeRank": {
        "type": "string",
        "description": "How exemplary this entity is for its primary archetype",
        "enum": ["exemplar", "strong-example", "typical", "partial", "tangential"]
      }
    }
  },

  "examples": {
    "mjolnir": {
      "archetypes": [
        {
          "category": "magical-weapon",
          "score": 95,
          "strength": "strong",
          "criteria": {
            "divineOrigin": 20,
            "uniquePowers": 20,
            "chosenWielder": 15,
            "namedIdentity": 10,
            "questObject": 10,
            "worldSaving": 10,
            "symbolism": 10
          },
          "examples": [
            "Forged by dwarven craftsmen Brokkr and Eitri",
            "Only Thor can lift it (later: those who are worthy)",
            "Returns to Thor's hand when thrown",
            "Used to defeat giants and protect Asgard"
          ],
          "analysis": "Mjolnir is a quintessential magical weapon, embodying nearly all key criteria at maximum strength. Its divine craftsmanship, unique powers, chosen wielder status, and role in cosmic protection make it an exemplar of the archetype."
        }
      ],
      "primaryArchetype": "magical-weapon",
      "archetypeRank": "exemplar"
    },

    "odysseus": {
      "archetypes": [
        {
          "category": "hero-journey",
          "score": 98,
          "strength": "strong",
          "criteria": {
            "callToAdventure": 15,
            "supernaturalAid": 10,
            "crossingThreshold": 10,
            "trialsAndTests": 15,
            "apotheosis": 8,
            "ultimateBoon": 15,
            "returnWithElixir": 10,
            "deathAndRebirth": 10
          },
          "examples": [
            "Called to join Trojan War",
            "Aided by Athena throughout journey",
            "Crosses from Troy to supernatural realms (Circe, Calypso, Underworld)",
            "Faces Cyclops, Scylla & Charybdis, Sirens, suitors",
            "Returns home with wisdom and maturity"
          ],
          "analysis": "The Odyssey is perhaps the most complete hero's journey in Western mythology, hitting nearly every beat of Campbell's monomyth. Odysseus's 10-year journey home includes supernatural aid, threshold crossings, trials, an underworld visit, and triumphant return."
        },
        {
          "category": "trickster",
          "score": 75,
          "strength": "strong",
          "criteria": {
            "deception": 20,
            "boundaryViolation": 15,
            "chaosCreation": 10,
            "dualNature": 10,
            "culturalGifts": 10,
            "shapeShifting": 10
          },
          "examples": [
            "Trojan Horse deception",
            "Tricks Polyphemus by calling himself 'Nobody'",
            "Disguises as beggar upon return",
            "Avoids consequences through cunning"
          ],
          "analysis": "Odysseus demonstrates strong trickster qualities, using deception, cunning, and rule-breaking to survive. His intelligence (metis) is his defining trait, often solving problems through trickery rather than force."
        }
      ],
      "primaryArchetype": "hero-journey",
      "archetypeRank": "exemplar"
    }
  }
}
