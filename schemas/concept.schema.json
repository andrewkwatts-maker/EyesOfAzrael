{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://eyesofazrael.com/schemas/concept.schema.json",
  "title": "Concept Schema",
  "description": "Schema for metaphysical concepts and philosophical ideas",
  "allOf": [
    {
      "$ref": "entity-base.schema.json"
    },
    {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "concept"
        },
        "category": {
          "type": "string",
          "enum": ["philosophical", "cosmological", "ethical", "metaphysical", "spiritual", "theological"],
          "description": "Concept category"
        },
        "definition": {
          "type": "string",
          "maxLength": 2000,
          "description": "Detailed definition"
        },
        "related_concepts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "relationship": {"type": "string"}
            }
          },
          "description": "Related concepts and their relationships"
        },
        "practices": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Spiritual or religious practices related to this concept"
        },
        "texts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "title": {"type": "string"},
              "reference": {"type": "string"}
            }
          },
          "description": "Texts that discuss this concept"
        },
        "interpretations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "tradition": {"type": "string"},
              "interpretation": {"type": "string"},
              "significance": {"type": "string"}
            }
          },
          "description": "Various traditional interpretations"
        }
      }
    }
  ]
}
