{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://eyesofazrael.com/schemas/hero.schema.json",
  "title": "Hero Schema",
  "description": "Schema for hero entities",
  "allOf": [
    {
      "$ref": "entity-base.schema.json"
    },
    {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "hero"
        },
        "gender": {
          "type": "string",
          "enum": ["male", "female", "non-binary", "unknown"]
        },
        "origin": {
          "type": "string",
          "maxLength": 500,
          "description": "Origin story or birthplace"
        },
        "parentage": {
          "type": "object",
          "properties": {
            "mortal": {
              "type": "boolean",
              "description": "Whether hero has mortal lineage"
            },
            "divine": {
              "type": "boolean",
              "description": "Whether hero has divine lineage"
            },
            "parents": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "id": {"type": "string"},
                  "name": {"type": "string"},
                  "type": {"type": "string"}
                }
              }
            }
          }
        },
        "quests": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["title", "description"],
            "properties": {
              "title": {"type": "string"},
              "description": {"type": "string"},
              "challenges": {
                "type": "array",
                "items": {"type": "string"}
              },
              "outcome": {"type": "string"}
            }
          },
          "description": "Major quests and adventures"
        },
        "abilities": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Special abilities or powers"
        },
        "weapons": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": {"type": "string"},
              "description": {"type": "string"},
              "origin": {"type": "string"}
            }
          }
        },
        "companions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "type": {"type": "string"},
              "relationship": {"type": "string"}
            }
          }
        },
        "fate": {
          "type": "string",
          "maxLength": 2000,
          "description": "Ultimate fate or death of the hero"
        },
        "legacy": {
          "type": "string",
          "maxLength": 2000,
          "description": "Cultural legacy and influence"
        }
      }
    }
  ]
}
