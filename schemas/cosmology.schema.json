{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://eyesofazrael.com/schemas/cosmology.schema.json",
  "title": "Cosmology Schema",
  "description": "Schema for cosmological concept entities",
  "allOf": [
    {
      "$ref": "entity-base.schema.json"
    },
    {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "const": "cosmology"
        },
        "category": {
          "type": "string",
          "enum": ["creation", "afterlife", "realm", "cosmic-structure", "cosmic-cycle", "metaphysical-concept"],
          "description": "Cosmology category"
        },
        "structure": {
          "type": "object",
          "properties": {
            "levels": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {"type": "string"},
                  "description": {"type": "string"},
                  "inhabitants": {"type": "array", "items": {"type": "string"}},
                  "characteristics": {"type": "array", "items": {"type": "string"}}
                }
              }
            },
            "connections": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "from": {"type": "string"},
                  "to": {"type": "string"},
                  "method": {"type": "string"}
                }
              }
            }
          }
        },
        "creation_narrative": {
          "type": "string",
          "maxLength": 5000,
          "description": "Creation story or origin narrative"
        },
        "key_figures": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "role": {"type": "string"}
            }
          }
        },
        "temporal_aspects": {
          "type": "object",
          "properties": {
            "cycles": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "duration": {"type": "string"},
                  "description": {"type": "string"}
                }
              }
            },
            "ages": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {"type": "string"},
                  "characteristics": {"type": "string"}
                }
              }
            }
          }
        }
      }
    }
  ]
}
